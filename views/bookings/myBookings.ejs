<% layout("layouts/boilerplate") %>

<style>
  /* BOOKING CARD DESIGN */
  .booking-card {
    background: linear-gradient(135deg, #f9f9ff, #ffffff);
    border-radius: 20px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
    padding: 20px;
    margin-bottom: 30px;
    transition: all 0.3s ease;
    border: 1px solid #e6e6e6;
  }

  .booking-card:hover {
    box-shadow: 0 10px 30px rgba(0, 123, 255, 0.1);
  }

  /* IMAGE STYLING */
  .booking-img {
    width: 100%;
    max-width: 160px;
    height: 120px;
    object-fit: cover;
    border-radius: 15px;
    transition: transform 1s ease;
  }

  .booking-img:hover {
    transform: scale(1.25);
  }

  /* TEXT AND INFO */
  .booking-info h5 {
    font-size: 1.25rem;
    color: #222;
    margin-bottom: 8px;
  }

  .booking-info label {
    font-weight: 600;
    font-size: 0.9rem;
    color: #666;
    margin-bottom: 0;
  }

  .booking-info p {
    margin-bottom: 10px;
    font-size: 0.95rem;
    color: #333;
  }

  /* STATUS BADGES */
  .badge-paid {
    display: inline-block;
    background-color: #28a745;
    color: #fff;
    padding: 5px 14px;
    border-radius: 30px;
    font-size: 0.85rem;
    font-weight: 600;
  }

  .badge-unpaid {
    display: inline-block;
    background-color: #dc3545;
    color: #fff;
    padding: 5px 14px;
    border-radius: 30px;
    font-size: 0.85rem;
    font-weight: 600;
  }

  /* RESPONSIVE TWEAKS */
  @media (max-width: 767px) {
    .booking-img {
      max-width: 100%;
      height: auto;
      margin-bottom: 15px;
    }

    .booking-info h5 {
      text-align: center;
    }

    .booking-card {
      text-align: center;
    }
  }

  /* BOOKING ACTION BUTTONS */
.booking-actions .btn {
  width: 180px;
  padding: 10px 20px;
  font-weight: 600;
  border-radius: 50px;
  font-size: 0.95rem;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease-in-out;
}

/* View Details Button */
.view-btn {
  border: 2px solid #00bcd4;
  background-color: #ffffff;
  color: #00bcd4;
  box-shadow: 0 2px 8px rgba(0, 188, 212, 0.1);
}

.view-btn:hover {
  background-color: #00bcd4;
  color: #fff;
  box-shadow: 0 4px 15px rgba(0, 188, 212, 0.3);
  transform: translateY(-1px);
}

/* Pay Now Button */
.pay-btn {
  border: 2px solid #0d6efd;
  background-color: #ffffff;
  color: #0d6efd;
  box-shadow: 0 2px 8px rgba(13, 110, 253, 0.1);
}

.pay-btn:hover {
  background-color: #0d6efd;
  color: #fff;
  box-shadow: 0 4px 15px rgba(13, 110, 253, 0.3);
  transform: translateY(-1px);
}

/* Responsive Center Alignment */
@media (max-width: 768px) {
  .booking-actions .btn {
    width: 100%;
  }
}

/* Pagination of my bookings page */
  .pagination .page-item.active .page-link {
    background: linear-gradient(135deg, #00bcd4, #0d6efd);
    color: white;
    border: none;
    box-shadow: 0 0 10px rgba(0, 123, 255, 0.3);
  }

  .pagination .page-link {
    color: #007bff;
    font-weight: 600;
    border-radius: 30px;
    margin: 0 5px;
    border: 1px solid #dee2e6;
    transition: all 0.3s ease;
  }

  .pagination .page-link:hover {
    background-color: #e9f5ff;
  }


</style>

