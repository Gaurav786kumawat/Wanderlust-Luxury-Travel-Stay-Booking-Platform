<!-- FLASH MESSAGES -->
<div class="container mt-4 d-flex justify-content-center">
  <div class="col-12 col-sm-10 col-md-8 col-lg-6">
    <% if (success && success.length) { %>
    <div
      class="alert alert-success d-flex align-items-center justify-content-between rounded-4 shadow-sm p-3 px-4"
    >
      <div class="d-flex align-items-center">
        <i class="fa-solid fa-circle-check me-2 fa-lg text-success"></i>
        <span class="fs-6"><%= success %></span>
      </div>
      <button
        type="button"
        class="btn-close"
        data-bs-dismiss="alert"
        aria-label="Close"
      ></button>
    </div>
    <% } %> <% if (error && error.length) { %>
    <div
      class="alert alert-danger d-flex align-items-center justify-content-between rounded-4 shadow-sm p-3 px-4"
    >
      <div class="d-flex align-items-center">
        <i class="fa-solid fa-circle-exclamation me-2 fa-lg text-danger"></i>
        <span class="fs-6"><%= error %></span>
      </div>
      <button
        type="button"
        class="btn-close"
        data-bs-dismiss="alert"
        aria-label="Close"
      ></button>
    </div>
    <% } %>
  </div>
</div>

