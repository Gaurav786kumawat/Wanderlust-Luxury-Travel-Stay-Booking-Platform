<% layout("/layouts/boilerplate") %>

<style>
  .error-wrapper {
    min-height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 1rem;
    word-wrap: break-word;
  }

  .error-card {
    max-width: 650px;
    width: 100%;
    font-size: 0.95rem; /* Smaller font */
    padding: 1.5rem 1.25rem;
  }

  .error-card h1 {
    font-size: 2rem;
  }

  .error-card h4 {
    font-size: 1rem;
  }

  .error-card p,
  .error-card pre {
    font-size: 0.9rem;
  }

  @media (max-width: 576px) {
    .error-card {
      font-size: 0.88rem;
      padding: 1.25rem 1rem;
    }

    .error-card h1 {
      font-size: 1.6rem;
    }

    .error-card h4 {
      font-size: 0.95rem;
    }
  }
</style>

<div class="error-wrapper">
  <div class="alert alert-danger error-card shadow-sm rounded-4 text-center">

    <!-- Error Code -->
    <h1 class="fw-bold text-danger mb-2">
      <%= err.statusCode || 500 %> Error
    </h1>

    <!-- Error Message -->
    <h4 class="mb-3 text-break">
      <%= err.message || "Something went wrong." %>
    </h4>

    <!-- Stack / Path -->
    <!-- <% if (err.stack) { %>
      <pre class="text-muted small text-start overflow-auto" style="max-height: 180px;">
<%= err.stack %>
      </pre>
    <% } %> -->

    <!-- Description -->
    <p class="text-muted mb-3 mt-3">
      Oops! Something went wrong while processing your request.<br />
      Please try again later or contact support.
    </p>

    <!-- Back Button -->
    <a href="/listings" class="btn btn-outline-primary rounded-pill px-4 mt-2">
      <i class="fa-solid fa-arrow-left me-2"></i> Back to Explore
    </a>

  </div>
</div>
